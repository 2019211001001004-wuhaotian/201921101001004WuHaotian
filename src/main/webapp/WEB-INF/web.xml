<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Wuhaotian</servlet-name><!--give any name-->
        <servlet-class>com.Wuhaotian.week2.demo.HelloWorldServlet</servlet-class><!--name of servlet class-->
    </servlet>
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>wuhaotian.week3.LifeCycleServlet</servlet-class>
    </servlet>
    <!--automatic code-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>wuhaotian.week3.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCdemoServlet</servlet-name>
        <servlet-class>com.Wuhaotian.week4.demo.JDBCDemoServlet</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:sqlserver://localhost;databaseName=userdb;</param-value>
        </init-param>
        <init-param>
            <param-name>username</param-name>
            <param-value>sa</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456  </param-value>
        </init-param>
        <load-on-startup></load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/register</url-pattern><!--write this url in action-->
        <!--/Life == LifeCycleServlet==com.Wuhaotian.week3.demo.LifeCycleServlet-->
    </servlet-mapping>
</web-app>